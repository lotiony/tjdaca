@page "/rawdata/{tid}/detail/{rid}"
@using tjdaca.Data
@inject tjdaca.Services.IOptionService optionService
@inject tjdaca.Services.IStudentService studentService
@inject tjdaca.Services.IRawdataService rawdataService
@inject IJSRuntime JS

<PageTitle>상담일지 관리</PageTitle>

<h3>상담일지 추가 / 수정</h3>

<MudCard Elevation="25">
    <MudCardContent>
        <MudGrid Spacing="2" Justify="Justify.Center">
            <MudItem xs="4">
                <MudTextField @bind-Value="rdata.BaseDate" Label="일자" InputType="InputType.Date" Format="yyyy-MM-dd" Margin="Margin.Normal" />
            </MudItem>

            <MudItem xs="4">
                <MudSelect @bind-Value="selectedStudent" Label="학생이름" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in studentList)
                    {
                        <MudSelectItem Value="@type">@type.StuName</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>

            <MudItem xs="4">
                <MudTextField @bind-Value="rdata.ClassName" Required Label="반명" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
            </MudItem>

            <MudItem xs="4">
                <MudTextField @bind-Value="rdata.SchType" Label="학교구분" ReadOnly="true" Variant="Variant.Filled" Margin="Margin.Normal"></MudTextField>
            </MudItem>
    
            <MudItem xs="4">
                <MudTextField @bind-Value="rdata.SchName" Label="학교명" ReadOnly="true" Variant="Variant.Filled" Margin="Margin.Normal"></MudTextField>
            </MudItem>

            <MudItem xs="4">
                <MudTextField @bind-Value="rdata.Grade" Label="학년" ReadOnly="true" Variant="Variant.Filled" Margin="Margin.Normal"></MudTextField>
            </MudItem>

            <MudItem xs="2">
                <MudSelect @bind-Value="rdata.Attendance" T="string" Label="출석여부" Variant="Variant.Text" Margin="Margin.Normal">
                    <MudSelectItem Value="@("O")">O</MudSelectItem>
                    <MudSelectItem Value="@("X")">X</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="rdata.AbsenceReason" Label="결석사유" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
            </MudItem>
            <MudItem xs="4">
                <MudTextField @bind-Value="rdata.SchAchievement" Label="학교시험성적" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
            </MudItem>
            

            <br /><br />


            <MudItem xs="6">
                <MudTextField @bind-Value="rdata.ClassSubject" Label="수업내용" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
            </MudItem>
            <MudItem xs="2">
                <MudSelect @bind-Value="rdata.ClassGrade" Label="수업학년-학기" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in classGradeList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="4">
                <MudTextField @bind-Value="rdata.Homework" Label="과제내용과 양" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
            </MudItem>
            <MudItem xs="2">
                @*<MudNumericField @bind-Value="selectedHomeworkPrev" Label="이전과제량" Min="0" Max="100" Variant="Variant.Text" Margin="Margin.Normal"></MudNumericField>*@
                <MudSelect @bind-Value="selectedHomeworkPrev" Label="이전과제량" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in ratioList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="2">
                @*<MudNumericField @bind-Value="selectedHomeworkPerform" Label="과제수행량" Min="0" Max="100" Variant="Variant.Text" Margin="Margin.Normal"></MudNumericField>*@
                <MudSelect @bind-Value="selectedHomeworkPerform" Label="과제수행량" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in ratioList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>

            </MudItem>
            <MudItem xs="2">
                @*<MudNumericField @bind-Value="selectedHomeworkCorrect" Label="과제정답" Min="0" Max="100" Variant="Variant.Text" Margin="Margin.Normal"></MudNumericField>*@
                <MudSelect @bind-Value="selectedHomeworkCorrect" Label="과제정답" Variant="Variant.Text" Margin="Margin.Normal" InputMode="InputMode.numeric">
                    @foreach (var type in ratioList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="3">
                <MudTextField @bind-Value="rdata.HomeworkProgress" Label="과제이행정도" ReadOnly="true" Variant="Variant.Filled" Adornment="Adornment.End" AdornmentText="%" Margin="Margin.Normal"></MudTextField>
            </MudItem>
            <MudItem xs="3">
                <MudTextField @bind-Value="rdata.HomeworkRatio" Label="과제정답률" ReadOnly="true" Variant="Variant.Filled" Adornment="Adornment.End" AdornmentText="%" Margin="Margin.Normal"></MudTextField>
            </MudItem>


            <br /><br />


            <MudItem xs="2">
                <MudSelect @bind-Value="selectedTestGrade" Label="테스트학기" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in testGradeList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="4">
                <MudSelect @bind-Value="selectedTestSubject" Label="테스트단원" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in testSubjectList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="6">
                <MudSelect @bind-Value="rdata.TextbookSource" Label="교재출처" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in textbookSourceList)
                    {
                        <MudSelectItem Value="@type.OptValue">@type.OptValue</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="5">
                <MudSelect @bind-Value="rdata.Difficulty" Label="난이도" Variant="Variant.Text" Margin="Margin.Normal">
                    <MudSelectItem Value="@("상")">상</MudSelectItem>
                    <MudSelectItem Value="@("중")">중</MudSelectItem>
                    <MudSelectItem Value="@("하")">하</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="2">
                @*<MudNumericField @bind-Value="selectedDailyCount" Label="일일테스트문항수" Min="0" Max="100" Variant="Variant.Text" Margin="Margin.Normal"></MudNumericField>*@

                <MudSelect @bind-Value="selectedDailyCount" Label="일일테스트문항수" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in ratioList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="2">
                @*<MudNumericField @bind-Value="selectedDailyCorrect" Label="일일테스트정답수" Min="0" Max="100" Variant="Variant.Text" Margin="Margin.Normal"></MudNumericField>*@
                <MudSelect @bind-Value="selectedDailyCorrect" Label="일일테스트정답수" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in ratioList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>

            </MudItem>
            <MudItem xs="3">
                <MudTextField @bind-Value="rdata.DailyScore" Label="일일테스트정답률" ReadOnly="true" Variant="Variant.Filled" Adornment="Adornment.End" AdornmentText="%" Margin="Margin.Normal"></MudTextField>
            </MudItem>


            <br /><br />


            <MudItem xs="2">
                <MudSelect @bind-Value="selectedCliniqGrade" Label="클리닉 학기" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in testGradeList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="3">
                <MudSelect @bind-Value="selectedCliniqSubject" Label="클리닉 단원" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in cliniqSubjectList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="2">
                @*<MudNumericField @bind-Value="selectedCliniqCount" Label="클리닉테스트문항수" Min="0" Max="100" Variant="Variant.Text" Margin="Margin.Normal"></MudNumericField>*@
                <MudSelect @bind-Value="selectedCliniqCount" Label="클리닉테스트문항수" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in ratioList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>

            </MudItem>
            <MudItem xs="2">
                @*<MudNumericField @bind-Value="selectedCliniqCorrect" Label="클리닉테스트정답수" Min="0" Max="100" Variant="Variant.Text" Margin="Margin.Normal"></MudNumericField>*@
                <MudSelect @bind-Value="selectedCliniqCorrect" Label="클리닉테스트정답수" Variant="Variant.Text" Margin="Margin.Normal">
                    @foreach (var type in ratioList)
                    {
                        <MudSelectItem Value="@type">@type</MudSelectItem>
                    }
                </MudSelect>

            </MudItem>
            <MudItem xs="3">
                <MudTextField @bind-Value="rdata.CliniqScore" Label="클리닉테스트정답률" ReadOnly="true" Variant="Variant.Filled" Adornment="Adornment.End" AdornmentText="%" Margin="Margin.Normal"></MudTextField>
            </MudItem>

            
            <br />


            <MudItem xs="12">
                <MudTextField @bind-Value="rdata.Counsel" Label="월간 상담내용" Lines="5" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="rdata.Etc1" Label="특이사항" Lines="2" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
            </MudItem>

        </MudGrid>
        
        
        
        <MudDivider DividerType="DividerType.Middle" Class="my-12"/>


        <MudButton Variant="Variant.Filled" Color="Color.Info" StartIcon="@Icons.Material.Filled.Save" OnClick="Save">상담일지 저장</MudButton>
        <MudButton Variant="Variant.Filled" Size="Size.Small" OnClick="Cancel">취소</MudButton>
    </MudCardContent>
</MudCard>


