@page "/"



<MudGrid Class="mt-8 align-center" Spacing="3">
    <MudItem xs="3"></MudItem>
    <MudItem xs="6">
        <MudText Typo="Typo.h3" Class="pb-3">특자단 학원관리 매니저</MudText>
        <MudPaper Class="d-flex justify-content-center pa-4" Elevation="25">
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.OpenInNew" Href="/new" Target="_self" FullWidth="true" Style="background-color: yellowgreen; color: white; height: 80px; font-weight:900; font-size:18px;">
                신규회원가입 페이지 바로가기
            </MudButton>
        </MudPaper>
    </MudItem>
    <MudItem xs="3"></MudItem>
</MudGrid>

<br />


<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h4">학생성적 / 통계</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        <MudGrid Spacing="2" Justify="Justify.FlexStart">
            <MudItem xs="2">
                <MudButton Variant="Variant.Filled" FullWidth="true" Style="height:150px;" Color="Color.Primary" Href="/search" StartIcon="@Icons.Material.Filled.AppRegistration">학생성적등록</MudButton>
            </MudItem>
            <MudItem xs="2">
                <MudButton Variant="Variant.Filled" FullWidth="true" Style="height:150px;" Color="Color.Primary" Href="/statistics" StartIcon="@Icons.Material.Filled.ListAlt">성적현황</MudButton>
            </MudItem>
            <MudItem xs="2">
                <MudButton Variant="Variant.Filled" FullWidth="true" Style="height:150px;" Color="Color.Primary" Href="/cliniqlist" StartIcon="@Icons.Material.Filled.AdsClick">클리닉대상자</MudButton>
            </MudItem>
            <MudItem xs="2">
                <MudButton Variant="Variant.Filled" FullWidth="true" Style="height:150px;" Color="Color.Primary" Href="/studentreport" StartIcon="@Icons.Material.Filled.AppRegistration">개별학습분석</MudButton>
            </MudItem>

        </MudGrid>
    </MudCardContent>
</MudCard>
